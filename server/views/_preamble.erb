<header>
  <div class="navbar">
    <div class="navbar-inner">
      <div class="container">
        <a class="brand" href="#">
          <% if current_board.secret? %>
          <img class="secret-indicator" src="<%= static_url("images/private.png") %>">
          <% else %>
          <img class="secret-indicator" src="<%= static_url("images/public.png") %>">
          <% end %>
          <span><%= current_board.store.owner.store.label %></span>/<span><%= current_board.store.label %></span>
        </a>
        <ul class="nav">
          <% if @user == refered %>
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">リボン<span class="caret"></span></a>
            <%=  erb :_chooseribbon %>
          </li>
          <li><a href="<%= local_url('/preferences') %>">個人設定</a></li>
          <li><a href="<%= local_url('/logout') %>">ログアウト</a></li>
          <% end %>
          <li><a href="https://github.com/jonigata/porotter">github</a></li>
        </ul>

        <% if @user == refered %>
        <ul class="nav pull-right">
          <li class="dropdown">
            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
              <img class="user-icon" src="<%= static_url("images/user.png") %>">
              <%= @user.store.label %>
              <span class="caret"></span>
            </a>
            <%=  erb :_chooseboard, :locals => { :boards => boards } %>
          </li>
        </ul>
        <% end %>
      </div>
    </div>
  </div>
  <div id="stamp-chooser">
    <%= erb :_stamps %>
  </div>
  <% if @user %>
  <div id="make-board">
    <%= erb :_makeboard %>
  </div>
  <div id="make-ribbon">
    <%= erb :_makeribbon, :locals => { :current_board => current_board } %>
  </div>
  <div id="edit-permission">
    <%= erb :_editpermission, :locals => { :current_board => current_board } %>
  </div>
  <div id="join-board">
    <%= erb :_joinboard %>
  </div>
  <div id="join-ribbon">
    <%= erb :_joinribbon, :locals => { :current_board => current_board } %>
  </div>
  <% end %>
</header>
