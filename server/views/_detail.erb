<% comments = post.store.comments %>
<div class="detail" comment-count="<%= comments.length %>" comments-version="<%= comments.store.version %>">
  <div class="author">
    <span class="label">
      <%= post.store.author.store.username %>
    </span>
    <span class="username">
      @<%= post.store.author.store.username %>
    </span>
    <span class="favorite">
      <% if @user %>
      <a href="#" onclick="MyPage.favor(<%= post.store.id %>);return false;">
        <% if @user.favors?(post) %>
        そうでもない
        <% else %>
        そうかも
        <% end %>
      </a>
      <% end %>
    </span>
  </div>
  <div class="content">
    <%= post.store.content %>
  </div>
</div>
