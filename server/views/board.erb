<!doctype html>
<html lang="ja">
  <%= erb :_head %>

  <body>
    <%= erb :_preamble, :locals => { :refered => refered, :current_board => current_board } %>

    <div class="workspace">
      <% current_board.list_ribbons.each do |ribbon| %>
      <div class="ribbon-outer">
        <section class="ribbon" ribbon-id="<%= ribbon.store.id %>">
          <div class="ribbon-inner">
            <%= erb :_ribbonheader, :locals => { :current_board => current_board, :ribbon => ribbon } %>
            <% if ribbon.writable_by?(@user) %>
            <%=  erb :_newarticle, :locals => { :ribbon => ribbon }  %>
            <% end %>
            <section class="timeline" level="0" ribbon-id="<%= ribbon.store.id %>" timeline-id="<%= ribbon.timeline.store.id %>" version="0" editable="<%= ribbon.editable_by?(@user) %>">
            </section>
          </div>
        </section>
      </div>
      <% end %>
    </div>

    <div class="hidden"
         id="basic-data"
         base-url="<%= base_url %>"
         username="<%= @user.username %>"
         refered-name="<%= refered.username %>"
         owner-name="<%= current_board.owner.username %>"
         board-name="<%= current_board.label %>"
         board-id="<%= current_board.store.id %>">
    </div>
  </body>
</html>
