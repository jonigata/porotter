<!doctype html>
<html lang="ja">
  <%= erb :_head %>

  <body>
    <%= erb :_preamble, :locals => { :refered => refered, :current_board => current_board, :boards => boards } %>

    <div class="workspace">
      <% current_board.list_ribbons.each do |ribbon| %>
      <div class="ribbon-outer">
        <section class="ribbon" ribbon-id="<%= ribbon.store.id %>">
          <div class="ribbon-inner">
            <%= erb :_ribbonheader, :locals => { :current_board => current_board, :ribbon => ribbon } %>
            <% if ribbon.editable_by?(@user) %>
            <%=  erb :_newarticle, :locals => { :ribbon => ribbon }  %>
            <% end %>
            <section class="timeline" level="0" ribbon-id="<%= ribbon.store.id %>" timeline-id="<%= ribbon.read_source.store.id %>" version="0">
            </section>
          </div>
        </section>
      </div>
      <% end %>
    </div>

    <div class="hidden" id="board-url" base-url="<%= base_url %>" username="<%= refered.store.username %>" boardname="<%= current_board.store.label %>"></div>
  </body>
</html>
