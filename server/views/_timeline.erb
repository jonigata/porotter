<section class="posts">
  <% timeline.fetch_all(direction).each do |post| %>
  <article class="post">
    <div class="avatar">
      <div class="icon">
      </div>
    </div>
    <div class="entry">
      <div class="author">
        <span class="label">
          <%= post.store.author.store.username %>
        </span>
        <span class="username">
          @<%= post.store.author.store.username %>
        </span>
        <span class="favorite">
          <a href="<%= local_url("p/favor") %>?target=<%= post.store.id %>">
            <% if user.favors?(post) %>
            ★解除
            <% else %>
            お気に入りに登録
            <% end %>
          </a>
        </span>
      </div>
      <div class="content">
        <%= post.store.content %>
      </div>

      <% comments = post.store.comments %>
      <div class="comments">
        <% if comments %>
        <%= erb :_timeline, :locals => { :user => user, :timeline => comments, :comment => :disabled, :direction => :downward } %>
        <% end %>
      </div>

      <div class="operation">
        <% if comment == :enabled %>
        <a href="#" onclick="openComments(this);return false;">
          コメントを見る(<%= comments ? comments.length : 0 %>)
        </a>
        <a href="#" onclick="openCommentForm(this);return false;">コメントする</a>
        <% end %>
      </div>
      <div class="comment-form">
        <%= erb :_newcomment, :locals => { :parent_id => post.store.id } %>
      </div>
    </div>
  </article>
  <% end %>
</section>
